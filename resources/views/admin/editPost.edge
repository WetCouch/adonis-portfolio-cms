<!DOCTYPE html>

<form action="/panel/posts/{{post.id}}/edit" method="POST">
  <label >Title</label>
  <input type="text" name="title" value="{{post.title}}">
  <label >Description</label>
  <input type="text" name="description" value="{{post.description}}">
  <label >Body</label>
  <textarea name="body" id="test" cols="30" rows="10">{{post.body}}</textarea>
  <input type="submit">
</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/5.2.1/tinymce.min.js"></script>

<script nonce="{{ cspNonce }}">
    tinymce.init({
        selector: 'textarea#test'
    });
</script>
