  <div class="flex space-between items-center">
    <h1>Panel</h1>
    <a href="/panel/signupPermission">{{ signupPermission }}</a>
  </div>
  <hr class="divider col-12 ml0 mt5">

  <div class="mt6">
    <h3>Users</h3>
    <ul>
      @each(user in users)
      <li class="mt3">
        <a href="/panel/users/{{user.id}}"><h5>{{ user.email }}</h5></a>
      </li>
      @endeach
    </ul>
    <a class="btn-default mt5 inline-block" href="/panel/createUser">Create New User</a>
  </div>

  <div class="mt6">
    <h3>Posts</h3>
    @each(post in posts)
      <div class="flex mt4">
        <a class="flex items-center col-3" href="/panel/posts/{{post.id}}">
