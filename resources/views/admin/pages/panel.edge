  </div>

  <div class="mt6">
    <h3>Projects</h3>
    @each(project in projects)
    <div class="flex mt4">
      <a class="col-3 flex items-center" href="/panel/projects/{{project.id}}"><h5>{{ project.title }}</h5></a>
      <p class="font-p2 pl4 col-9">{{ truncate(project.description, 100, '...') }}</p>
